<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/red"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="359dp"
            android:layout_height="102dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/piedra"
            android:gravity="center"
            android:text="TRAFICANTES PUCP OFICIAL"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/logo"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView">
        </ImageView>

        <RelativeLayout
            android:layout_width="352dp"
            android:layout_height="455dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_form_login"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="LOGIN"
                android:textColor="@color/rodLOGIN"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:layout_marginStart="-106dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="124dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Correo"
                android:textColor="@color/red"
                android:textSize="19sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/textView4"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:layout_marginStart="-87dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="-100dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:layout_marginStart="-87dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="100dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Contraseña"
                android:textColor="@color/red"
                android:textSize="19sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/textView6"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:layout_marginStart="-87dp"
                android:layout_marginTop="128dp"
                android:layout_marginEnd="-100dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="169dp"
                android:layout_height="55dp"
                android:layout_below="@+id/textView6"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:layout_marginStart="-31dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="-24dp"
                android:backgroundTint="@color/red"
                android:text="Iniciar Sesión"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:layout_marginStart="-55dp"
                android:layout_marginTop="295dp"
                android:layout_marginEnd="21dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="No tienes una cuenta?"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:layout_marginStart="72dp"
                android:layout_marginTop="295dp"
                android:layout_marginEnd="-47dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:onClick="textoCrearCuenta"
                android:text="@string/create_una"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>