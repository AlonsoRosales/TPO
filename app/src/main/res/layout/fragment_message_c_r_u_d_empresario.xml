<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".MessageFragmentPedirComidaUsuario">

        <LinearLayout
            android:id="@+id/separadordetallecomida2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/botoneditarcomida"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/red"
                android:text="Editar"
                android:textStyle="bold"
                app:cornerRadius="15dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/separadordetallecomida3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separadordetallecomida2">

            <Button
                android:id="@+id/botoneliminarcomida"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/red"
                android:text="Borrar"
                android:textStyle="bold"
                app:cornerRadius="15dp">

            </Button>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>