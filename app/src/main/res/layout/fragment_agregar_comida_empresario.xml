<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_pantalla"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:context=".FragmentAgregarComidaEmpresario">

        <ImageButton
            android:id="@+id/retroceder4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_back_button"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout5Empresario" />

        <LinearLayout
            android:id="@+id/linearLayout5Empresario"
            android:layout_width="370dp"
            android:layout_height="750dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RelativeLayout
                android:id="@+id/agregarcomidaplantillaEmpresario"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nombrecomidatituloEmpresario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="105dp"
                    android:text="Nombre"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/nombreComidaEmpresario2"
                    android:layout_width="320dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/nombrecomidatituloEmpresario"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_inputs"
                    android:ems="12"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/stockTituloEmpresario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nombreComidaEmpresario2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="105dp"
                    android:text="Stock"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <ImageButton
                    android:id="@+id/disminuirStockEmpresario"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/stockTituloEmpresario"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:ems="12"
                    app:srcCompat="@drawable/ic_minus" />

                <EditText
                    android:id="@+id/stockEmpresario"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/stockTituloEmpresario"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:ems="12"
                    android:inputType="phone"
                    android:paddingLeft="20dp"
                    android:text="1" />

                <ImageButton
                    android:id="@+id/aumentarStockEmpresario"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/stockTituloEmpresario"
                    android:layout_marginStart="96dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:ems="12"
                    app:srcCompat="@drawable/ic_add" />

                <TextView
                    android:id="@+id/precioTituloEmpresario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stockEmpresario"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="105dp"
                    android:text="Precio"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/precioEmpresario"
                    android:layout_width="320dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/precioTituloEmpresario"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_inputs"
                    android:ems="12"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/tiendaTituloEmpresario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/precioEmpresario"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="105dp"
                    android:text="IdTienda"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/tiendaEmpresario"
                    android:layout_width="320dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tiendaTituloEmpresario"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_inputs"
                    android:ems="12"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/descripcionTituloEmpresario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tiendaEmpresario"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="80dp"
                    android:text="Descripción"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/descripcionEmpresario"
                    android:layout_width="320dp"
                    android:layout_height="135dp"
                    android:layout_below="@+id/descripcionTituloEmpresario"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_inputs"
                    android:ems="12"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/fotosTituloEmpresario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descripcionEmpresario"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="80dp"
                    android:text="Fotos"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/fotosEmpresario"
                    android:layout_width="320dp"
                    android:layout_height="140dp"
                    android:layout_below="@+id/fotosTituloEmpresario"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_inputs"
                    android:ems="12"
                    android:inputType="textPersonName">

                    <ImageButton
                        android:id="@+id/variasImagenesEmpresario"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="135dp"
                        android:layout_marginBottom="71dp"
                        app:srcCompat="@drawable/ic_camara"></ImageButton>

                    <TextView
                        android:id="@+id/avisoTextEmpresario"
                        android:layout_width="270dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="85dp"
                        android:gravity="center"
                        android:text="Seleccione múltiples imágenesEmpresario"
                        android:textSize="18sp"></TextView>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/separadorEmpresario"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/linearLayout5Empresario"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout5Empresario"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5Empresario">

            <Button
                android:id="@+id/botonAgregarEmpresario"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:textStyle="bold"
                app:cornerRadius="15dp"
                android:backgroundTint="@color/red"
                android:text="Agregar">

            </Button>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>